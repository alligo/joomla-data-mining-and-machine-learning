set -e

#######################################
# Show help
# Globals:
#   None
# Arguments:
#   None
# Returns:
#   None
#######################################
help() {
  echo "Usage:
  nginxlogs2csv /var/log/nginx/access.log
  "
  # nginxlogs2csv /var/log/nginx/access.log /tmp/access.log.csv
}

if [ -z "$1" ] || [ "$1" = "-h" ] || [ "$1" = "--help" ] ;
then
  help
  exit 1
fi
